<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>beacon-fileprocessor</groupId>
    <artifactId>beacon-fileprocessor</artifactId>
    <version>1.0</version>
  </parent>
  <artifactId>beaconlib</artifactId>
  
  
  <dependencies>
  <dependency>
			<groupId>beacon-fileprocessor</groupId>
			<artifactId>fb-utils</artifactId>
			<version>1.0</version>
	</dependency>
	  <dependency>
			<groupId>beacon-fileprocessor</groupId>
			<artifactId>fb-fileparser</artifactId>
			<version>1.0</version>
	</dependency>
  </dependencies>
  <build>
 <plugins>
  <plugin>
  <artifactId>maven-assembly-plugin</artifactId>
  <configuration>
    <archive>
      <manifest>
        <mainClass>unitiad.App</mainClass>
      </manifest>
    </archive>
    <descriptorRefs>
      <descriptorRef>jar-with-dependencies</descriptorRef>
    </descriptorRefs>
  </configuration>
  <executions>
    <execution>
      <id>make-assembly</id> <!-- this is used for inheritance merges -->
      <phase>package</phase> <!-- bind to the packaging phase -->
      <goals>
        <goal>single</goal>
      </goals>
    </execution>
  </executions>
</plugin>
</plugins>
</build>
</project>